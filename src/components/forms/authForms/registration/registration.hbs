<div class="form-container">
    {{#> Form formStyles="form-content" }}
        {{{ Title text="Регистрация" }}}
        <div class="form-content__form-block form-content__fields">
            {{{ Input label="Почта" type="email" placeholder="Почта" name="email" ref="email" validate=validate.email}}}
            {{{ Input label="Логин" type="text" placeholder="Логин" name="login" ref="login" validate=validate.login}}}
            {{{ Input label="Фамилия" type="text" placeholder="Фамилия" name="second_name" ref="secondName" validate=validate.secondName }}}
            {{{ Input label="Имя" type="text" placeholder="Имя" name="first_name" ref="firstName" validate=validate.firstName}}}
            {{{ Input label="Отчество" type="text" placeholder="Отчество" name="middle_name" ref="middleName" validate=validate.middleName}}}
            {{{ Input label="Телефон" type="text" type="tel" placeholder="Телефон" name="phone" ref="phone" validate=validate.phone}}}
            {{{ Input label="Пароль" type="text" type="password" placeholder="Пароль" name="password" ref="password" validate=validate.password }}}
            {{{ Input label="Повторить пароль" type="password" placeholder="Повторить пароль" name="repeate_password" ref="repeatePassword" validate=validate.repeatePassword }}}
        </div>
        <div class="form-content__form-block form-content__actions">
            {{{ Button text="Зарегистрироваться" type="primary" onClick=onRegister}}}
            {{{ AppLink text="Войти" type="secondary" href="/login" }}}
        </div>
    {{/Form}}
</div>
