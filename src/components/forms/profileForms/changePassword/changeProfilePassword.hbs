{{#> Form formStyles="profile__container" onSubmit=onSave}}
    <div class="profile__avatar">
        {{{ Avatar }}}
    </div>
    <div class="profile__info">
        {{{ ProfileItem label="Старый пароль" isEdit=true name="oldPassword" type="password" ref="oldPassword" validate=validate.oldPassword  }}}
        {{{ ProfileItem label="Новый пароль" isEdit=true name="newPassword" type="password" ref="newPassword" validate=validate.newPassword  }}}
        {{{ ProfileItem label="Повторите новый пароль" isEdit=true name="repeateNewPassword" type="password" ref="repeateNewPassword" validate=validate.repeateNewPassword }}}
    </div>
    <div class="profile__part profile__buttons-container">
        {{{ Button text="Сохранить" type="primary" onClick=onSave }}}
    </div>
{{/Form}}
