{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "prettier",
        "@typescript-eslint"
    ],
    "extends": [
        "prettier",
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "linebreak-style": "off",
        "quotes": ["error", "single"],
        "max-len": ["error", 120],
        "indent": ["error", 4]
    }
}
